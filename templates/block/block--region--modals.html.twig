{% set classes = [
    'modal-block',
    'modal-block--' ~ class,
  ]
%}
<div id="{{ class }}" class="{{ classes|join(' ') }}">
  {% if label %}
    <p class="modal-form__heading">{{ label }}</p>
  {% endif %}
  <span class="modal-block__close close-modals close-icon">
    <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M13 1L1 13M1 1L13 13" stroke="#272727" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path></svg>
  </span>
  <div{{ attributes }}>
    {{ title_prefix }}
    {{ title_suffix }}
    {% block content %}
      {{ content }}
    {% endblock %}
  </div>
</div>
