{#
/**
 * @file
 * The views infinite scroll pager template.
 */
#}

{% if items.next %}
  <ul{{ attributes }}>
    <li class="pager__item pager__item--infinite-scroll">
      <a href="{{ items.next.href }}" class="infinite-scroll" title="{{ 'Go to next page'|t }}" rel="next">
        <span class="ajax-progress-throbber"></span>
        <span class="visually-hidden">{{ options.button_text }}</span>
      </a>
    </li>
  </ul>
{% endif %}
